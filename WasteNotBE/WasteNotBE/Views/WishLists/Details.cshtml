@model WasteNotBE.Models.WishList

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<div>
    <h4>WishList</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        @foreach (var item in Model.WishListItems)

        {
            <p>@Html.DisplayFor(modelItem => item.Item.Title)</p>
            <p><a asp-controller="WishListItems" asp-action="Delete" asp-route-id="@item.Id" class="btn-success">DELETE</a></p>
}


    </dl>
</div>
<a asp-controller="Items" asp-action="" asp-route-id="@Model.Id" class="btn-success">Create New Item</a>
<div>
    <a asp-action="Index">Back to List</a>
</div>

