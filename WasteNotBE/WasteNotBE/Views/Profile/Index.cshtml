@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@model WasteNotBE.Models.ApplicationUserViewModels.ProfileViewModel


@{
    ViewData["Title"] = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<a asp-action="Edit" asp-route-id="@Model.User.Id">*@
<div class="profile-div">
    <div class="profile-photo-div">
        <div class="profile-image-cropper">
            @if (SignInManager.IsSignedIn(User))
            {
                @if (Model.User.PhotoURL == null)
                {
                    <a asp-action="UserPhotoEdit" asp-route-id="@Model.User.Id">
                        <img class="item-profile-user-img" src="data:image/png;base64," />
                    </a>
                }
                else
                {
                    <a asp-action="UserPhotoEdit" asp-route-id="@Model.User.Id">
                        <img class="item-profile-user-img" src="@Html.DisplayFor(model => model.User.PhotoURL)" />
                    </a>
                }
            }
            else
            {
                @if (Model.User.PhotoURL == null)
                {
                    <img class="item-profile-user-img" src="data:image/png;base64," />
                }
                else
                {
                    <img class="item-profile-user-img" src="@Html.DisplayFor(model => model.User.PhotoURL)" />
                }
            }
            }
        </div>
    </div>
    <div class="profile-info-div">
        <h1 class="profile-user-full-name">@Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)</h1>
        <div class="profile-user-story-div">
            @if (SignInManager.IsSignedIn(User))
            {
                @if (Model.User.Story == null)
                {
                    <a asp-action="UserStoryEdit" asp-route-id="@Model.User.Id">
                        <h4>Share your ethical consumption journey here..</h4>
                    </a>
                }
                else
                {
                    <a asp-action="UserStoryEdit" asp-route-id="@Model.User.Id">
                        @Html.DisplayFor(model => model.User.Story)
                    </a>
                }
            }
            else
            {
                @if (Model.User.Story == null)
                {
                    <h4>Share your ethical consumption journey here..</h4>
                }
                else
                {
                    @Html.DisplayFor(model => model.User.Story)
                }

            }
        </div>
        <hr />
        <div class="profile-wishlist-div">
            @if (User.Identity.Name == Model.User.UserName && SignInManager.IsSignedIn(User))
            {
                <div class="profile-wishlist-buttons-div">
                    <a asp-controller="WishLists" asp-action="Create" class="profile-button">Create New List</a>
                    <div class="vl"></div>
                    <a asp-controller="Items" asp-action="Create" class="profile-button">Create New Item</a>
                </div>
            }

            <div class="profile-individual-wishlist">
                @foreach (var item in Model.UserWishLists)
                {
                    <a asp-controller="WishLists" asp-action="Details" asp-route-id="@item.Id">
                        <div class="profile-wishlist-title">
                            <p class="profile-wishlist-header">@Html.DisplayFor(modelItem => item.Title)</p>
                        </div>
                    </a>
                    <div class="profile-wishlist-images">
                        @foreach (var groupeditem in Model.GroupedItems)
                        {
                            if (item.Id == groupeditem.WishListId)
                            {

                                @foreach (var gi in groupeditem.Items)
                                {
                                    <div class="profile-wishlist-image-cropper">
                                        <img class="profile-individual-wishlist-image" src="@Html.DisplayFor(modelItem => gi.PhotoUrl)" />
                                    </div>
                                }

                            }


                        }
                    </div>
                }

            </div>
        </div>
    </div>
</div>






