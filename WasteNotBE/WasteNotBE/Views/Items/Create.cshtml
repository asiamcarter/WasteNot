@model WasteNotBE.Models.ItemViewModels.ItemCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateNewItem</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item.Title" class="control-label"></label>
                <input asp-for="Item.Title" class="form-control" />
                <span asp-validation-for="Item.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Description" class="control-label"></label>
                <input asp-for="Item.Description" class="form-control" />
                <span asp-validation-for="Item.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.SourceLink" class="control-label"></label>
                <input asp-for="Item.SourceLink" class="form-control" />
                <span asp-validation-for="Item.SourceLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.PhotoUrl" class="control-label"></label>
                <input asp-for="Item.PhotoUrl" class="form-control" />
                <span asp-validation-for="Item.PhotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.ReplacementTag" class="control-label"></label>
                <input asp-for="Item.ReplacementTag" class="form-control" />
                <span asp-validation-for="Item.ReplacementTag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WishListId" class="control-label"></label>
                <select asp-for="WishListId" class="form-control" asp-items="@Model.UserWishLists"></select>
            </div>
            <div class="form-group">
                <label asp-for="Item.CategoryId" class="control-label"></label>
                <select asp-for="Item.CategoryId" class="form-control" asp-items="@Model.ItemCategories"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
