@model WasteNotBE.Models.WishListItemViewModels.WishListItemCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="profile-user-story-edit-form-div">
    <h3>Add Item To List</h3>
    <div>
        <div>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @*<label asp-for="NewWishListItem.WishListId" class="control-label"></label>*@
                    <select asp-for="NewWishListItem.WishListId" class="form-control" asp-items="ViewBag.WishListId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

