@model WasteNotBE.Models.HomeViewModels.HomeIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <div class="homepage-div">
        @foreach (var item in Model.ItemList)
        {
        <div class="homepage-item">
            <a asp-controller="Items" asp-action="Details" asp-route-id="@item.Id">
                <img src="@Html.DisplayFor(modelItem => item.PhotoUrl)" />
            </a>
            <p>@Html.DisplayFor(modelItem => item.Title)</p>
            @*<p>@Html.DisplayFor(modelItem => item.User.FirstName)</p>*@
        </div>
           
        }
         </div>

</table>

